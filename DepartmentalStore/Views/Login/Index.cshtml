<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Login Departmental Store</title>
    <!-- inject:css -->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/login/css")
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Resources/Login/images/icon.png" type="image/png" />
    <link href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp"
          rel="stylesheet" />
</head>

<!--Main Body-->
<body style="background: linear-gradient(90deg, #00C9FF 0%, #92FE9D 100%);">
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth auth-bg-1 theme-one">
                <div class="row w-100">
                    <div class="col-lg-4 mx-auto">
                        <div class="auto-form-wrapper">
                            <form id="loginForm">
                                <div>
                                    <img src="~/Resources/Login/images/icon.png" width="70" />
                                    <span style="font-size: 20px; color: darkcyan;">Departmental Store</span>
                                </div>
                                <div class="form-group">
                                    <label class="label" style="padding-top: 20px;">
                                        Username
                                    </label>
                                    <div class="input-group ">
                                        <!--User Name-->
                                        <input id="username"
                                               type="text"
                                               class="form-control"
                                               placeholder="Username" />
                                        <div class="input-group-append">
                                            <span class="input-group-text"> </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="label">Password</label>
                                    <div class="input-group">
                                        <!--Password-->
                                        <input id="password"
                                               type="password"
                                               class="form-control"
                                               placeholder="*********" />
                                        <div class="input-group-append">
                                            <span class="input-group-text"> </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <!--LoginButton-->
                                    <button class="btn btn-success submit-btn btn-block"
                                            id="loginButton">
                                        Login
                                    </button>
                                    <!--LoginAsGuestButton-->
                                </div>
                                <div class="form-group d-flex justify-content-between">
                                    <div class="pl-0 form-check form-check-flat mt-0">
                                        <button class="btn btn-success loginButton btn-block"
                                                id="loginAsGuestButton">
                                            Login As Guest
                                        </button>
                                    </div>
                                    <a href="mailto:admin@DepartmentalStore.com?Subject=Forget%20Password" target="_top" "
                                       class="text-small forgot-password text-black"
                                       style="padding-top: 10px;">Forgot Password</a>
                                </div>
                            </form>
                        </div>
                        <ul class="auth-footer">
                            <li>
                                <a href="#" style="color: azure;">Conditions</a>
                            </li>
                            <li>
                                <a href="#" style="color: azure;">Help</a>
                            </li>
                            <li>
                                <a href="#" style="color: azure;">Terms</a>
                            </li>
                        </ul>
                        <p class="footer-text text-center" style="color: azure;">
                            copyright © 2019 YC Team. All rights reserved.
                        </p>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- inject:js -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/login/js")
    <!-- endinject -->
</body>
</html>
