
@{
    ViewBag.Title = "Purchasing";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

@section Styles {
    @Styles.Render("~/bundles/Staff/Purchasing/css")
}

@section Scripts {
    @Scripts.Render("~/bundles/Staff/Purchasing/js")
}


<div id="container">
    <!--Left Side-->
    <div class="leftSide">
        <!--Invoice Section-->
        <div id="invoice">
            <!--Data Table-->
            <div>
                <table class="table table-bordered table-striped mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th style="width: 30%;" scope="col">Product Name</th>
                            <th style="width: 20%;" scope="col">Rating</th>
                            <th style="width: 20%;" scope="col">Quantity</th>
                            <th style="width: 20%;" scope="col">Value</th>
                            <th style="width: 10%;" scope="col"></th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="my-custom-scrollbar">
                <table id="table" class="table table-bordered table-striped mb-0">
                </table>
            </div>
        </div>
    </div>

    <!--Right Side-->
    <div class="rightSide">
        <!--AddItem Section-->
        <div id="addItem" class="addItem">
            <h2>Add Item</h2>
            <div style="display: inline; ">
                <!--Item ID -->
                <div style="display: inline; float:left;">
                    <label>
                        Item ID
                    </label>
                    <input id="batchId" type="text" class="input-group-text" />
                </div>
                <!--Quantity-->
                <div style="display: inline;">
                    <label>
                        Quantity
                    </label>
                    <input id="quantity" type="number" class="input-group-text" />
                </div>
            </div>
            <!--Add button-->
            <button id="add"
                    type="button"
                    class="btn btn-success"
                    style="margin-top: 5px; margin-bottom: -10px;">
                Add Item
            </button>
            <hr />
            <!--Total Value-->
            <div style="display: inline;">
                <label style="display: inline; float: left; margin-right: 5px;">
                    Total Value
                </label>
                <input id="totalValue"
                       type="number"
                       class="input-group-text"
                       readonly="readonly" />
            </div>
            <!--Cash-->
            <div style="margin-top: 5px;">
                <label style="display: inline; float: left; margin-right: 45px;">
                    Cash
                </label>
                <input id="cash" type="number" class="input-group-text" />
            </div>
            <!--Change-->
            <div style="margin-top: 5px;">
                <label style="display: inline; float: left; margin-right: 26px;">
                    Change
                </label>
                <input id="change" type="number" class="input-group-text" readonly />
            </div>
            <hr />
            <!--Customer ID-->
            <div style="margin-top: 5px;">
                <label style="display: inline; float: left; margin-right: 2px;">
                    Customer ID
                </label>
                <input id="customerId" type="number" class="input-group-text" />
            </div>
            <hr />
            <!--Confirm add item-->
            <button id="confirm"
                    type="button"
                    class="btn btn-primary"
                    style="margin-top: 5px; margin-bottom: -10px;">
                Confirm
            </button>
            <!--Cancel-->
            <button id="cancel"
                    type="button"
                    class="btn btn-danger"
                    style="margin-top: 5px; margin-bottom: -10px; margin-left: 5px;">
                Cancel
            </button>
        </div>
    </div>
</div>